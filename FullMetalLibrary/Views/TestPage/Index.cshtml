@model IEnumerable<FullMetalLibrary.Models.Book>

@{
    ViewData["Title"] = "Test Books Index";
}

<h1>Test Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Publish Date</th>
            <th>Genre</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.PublishDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Genre</td>
                <td>@(item.Available ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
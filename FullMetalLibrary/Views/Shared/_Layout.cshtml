<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Full Metal Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">🔫 Full Metal Library📖</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Authors" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admins" asp-action="Index">Admins</a>
                        </li>

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("AdminUser") != null)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">
                                    Hello, @Context.Session.GetString("AdminUser")
                                </span>
                                <a class="btn btn-outline-danger" asp-controller="Admins" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="Admins" asp-action="Login">Login</a>
                                <a class="btn btn-outline-success" asp-controller="Admins" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        @RenderBody()
    </div>

    <footer class="text-center text-light py-3">
        <p>&copy; 2025 - FullMetalLibrary</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
